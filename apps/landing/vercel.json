{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://onlnk.io/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!features|pricing|privacy|terms|auth).+)",
      "destination": "https://app.onlnk.io/$1"
    }
  ]
}
